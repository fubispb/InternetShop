<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context
       https://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    <context:component-scan base-package="internet_shop.servlets" />


    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/my_shop"/>
        <property name="username" value="admin"/>
        <property name="password" value="123456"/>
    </bean>

    <bean id="connectBaseService" class="internet_shop.service.ConnectBaseService">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="productService" class="internet_shop.service.ProductService">
        <constructor-arg ref="connectBaseService"/>
    </bean>

    <bean id="bucketService" class="internet_shop.service.BucketService">
        <constructor-arg ref="connectBaseService"/>
        <constructor-arg ref="productService"/>
    </bean>

    <bean id="userService" class="internet_shop.service.UserService">
        <constructor-arg ref="connectBaseService"/>
        <constructor-arg ref="bucketService"/>
    </bean>

